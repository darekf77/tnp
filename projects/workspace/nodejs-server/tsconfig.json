{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "watch": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "bundle"
    ]
}