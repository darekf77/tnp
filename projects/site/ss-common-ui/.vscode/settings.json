{
  "files.exclude": {
    "node_modules": true,
    "tmp*": true,
    "dist*": true,
    "bundle*": true,
    "browser": true,
    "backup": true,
    "module": true,
    "www": true,
    "Thumbs.db": true,
    ".DS_Store": true,
    "**/.DS_Store": true,
    "npm-debug.log*": true,
    ".sass-cache": true,
    ".sourcemaps": true,
    "src": true,
    "components": true,
    "__src": true,
    "__components": true,
    "!custom/src": true,
    "!custom/components": true,
    "tslint.json": true,
    ".editorconfig": true,
    "index.js": true,
    "index.d.ts": true,
    "index.js.map": true,
    "gulpfile.js": true,
    "ng-package.json": true,
    "tsconfig-aot.bundle.json": true,
    "tsconfig-aot.dist.json": true,
    "src/tsconfig.packages.json": true,
    "tsconfig.json": true,
    "src/typings.d.ts": true,
    "src/main.ts": true,
    "src/polyfills.ts": true,
    "src/tsconfig.app.json": true,
    "src/tsconfig.spec.json": true,
    "protractor.conf.js": true,
    "karma.conf.js": true,
    "src/assets/ss-common-ui": true,
    ".gitignore": true,
    ".npmignore": true,
    ".npmrc": true,
    ".babelrc": true
  },
  "workbench.colorCustomizations": {
    "activityBar.background": "#c468b6",
    "activityBar.foreground": "#ffffff",
    "statusBar.background": "#bcdd70",
    "statusBar.debuggingBackground": "#bcdd70"
  },
  "editor.rulers": [
    100,
    120
  ],
  "html.format.wrapAttributes": "force-aligned",
  "workbench.colorTheme": "Default Light+",
  "tslint.autoFixOnSave": true
}