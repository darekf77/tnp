{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build watch",
      "command": "${command:extension.firedevdefaultbuildcommand}",
      "args": [
        "bdwa"
      ],
      "isBackground": true,
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true,
      }
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "extension.firedevdefaultbuildcommand",
      "args": "terminateAll"
    }
  ]
}
