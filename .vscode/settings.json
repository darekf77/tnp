{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "projects": false
        // "node_modules": true,
        // "index.*": true,
        // "dist": true,
        // "bin": true,
        // ".gitignore": true,
        // ".npmignore": true,
